<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/books"
            android:layout_width="158dp"
            android:layout_height="153dp"
            android:src="@drawable/books"
            app:layout_constraintBottom_toTopOf="@+id/button_back_books"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/books_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="128dp"
            android:text="@string/table_3"
            android:textColor="@color/wall"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/button_back_tabl"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/books"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints"></TextView>

        <Button
            android:id="@+id/button_back_books"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/btn_grey"
            android:fontFamily="@font/montserrat"
            android:text="@string/button_back"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"></Button>


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>